<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Dark Mode -->
    <style name="Theme.QrCodePro" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.QrCodePro.Splash" parent="Theme.QrCodePro">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
    </style>
</resources>
